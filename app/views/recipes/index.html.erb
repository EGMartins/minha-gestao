<div class="container">

  <h1>Receitas</h1>

  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Total</th>
        <th>Forma de Pagamento</th>
        <th>Categoria</th>
        <th>Observação</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= recipe.total %></td>
          <td><%= recipe.payment %></td>
          <td><%= recipe.category %></td>
          <td><%= recipe.observation %></td>
          <td><%= link_to 'Ver', recipe, class: "btn btn-primary" %></td>
          <td><%= link_to 'Editar', edit_recipe_path(recipe), class: "btn btn-success" %></td>
          <td><%= link_to 'Deletar', recipe, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Cadastrar Receita', new_recipe_path, class: "btn btn-primary" %> <br><br><br>
  <%= link_to 'Inicio', home_index_path, class: "btn btn-default" %>
</div>
